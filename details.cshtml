@model collegefeedbacksystem24.Models.feedback

@{
    ViewBag.Title = "details";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Feedback Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fafafa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .details-container {
            max-width: 600px;
            margin: 80px auto;
            padding: 30px;
            background-color: white;
            border: 1px solid #dbdbdb;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.05);
        }

        .details-header {
            font-size: 28px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 30px;
        }

        .detail-row {
            margin-bottom: 20px;
        }

        .detail-label {
            font-weight: 600;
            color: #555;
        }

        .detail-value {
            font-size: 16px;
            color: #333;
            margin-top: 5px;
        }

        .btn-group {
            margin-top: 30px;
            text-align: center;
        }

        .btn-insta {
            background-color: #3897f0;
            color: white;
            border: none;
            padding: 10px 18px;
            margin: 0 10px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
        }

            .btn-insta:hover {
                background-color: #318ce7;
            }
    </style>
</head>
<body>

    <div class="details-container">
        <div class="details-header">Feedback Details</div>

        <div class="detail-row">
            <div class="detail-label">Student Name</div>
            <div class="detail-value">@Html.DisplayFor(model => model.StudentName)</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Feedback Type</div>
            <div class="detail-value">@Html.DisplayFor(model => model.FeedbackType)</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Feedback Text</div>
            <div class="detail-value">@Html.DisplayFor(model => model.FeedbackText)</div>
        </div>

        <div class="btn-group">
            @Html.ActionLink("delete", "delete", null, new { id = Model.StudentId }, new { @class = "btn-insta" })
            @Html.ActionLink("Back", "feedbacks", null, new { @class = "btn-insta" })
        </div>
    </div>

</body>
</html>