<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<style>

    .faculty-container {
        max-width: 1000px;
        margin: 100px auto 80px;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.8);
        line-height: 1.8;
        color: #333;
        font-size: 1.05rem;
    }

    .title-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 20px;
    }

    .page-title {
        color: #2c3e50;
        font-size: 24px;
        font-weight: 600;
        border-bottom: 2px solid #0d6efd;
        padding-bottom: 4px;
    }


    .faculty-container h2 {
        text-align: center;
        font-size: 2rem;
        color: #2c3e50;
        margin-bottom: 30px;
        border-bottom: 2px solid #3498db;
        display: inline-block;
        padding-bottom: 5px;
    }

    .faculty-card {
        background-color: #f5f7fa;
        border-left: 5px solid #3498db;
        padding: 20px;
        margin-bottom: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .faculty-card h3 {
            margin-top: 0;
            color: #2980b9;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .faculty-card p,
        .faculty-card ul {
            margin-bottom: 10px;
            font-weight: bold;
        }

        .faculty-card ul {
            padding-left: 20px;
            list-style-type: disc;
        }

    #n1 {
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.8);
        border-bottom: 1px solid #dbdbdb;
        height: 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        width: 100%;
        background-color: lightblue;
    }
</style>



