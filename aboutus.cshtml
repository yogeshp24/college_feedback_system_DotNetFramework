@model collegefeedbacksystem24.Models.userregistration
@{
    ViewBag.Title = "aboutus";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<style>

    #n1 {
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.8);
        border-bottom: 1px solid #dbdbdb;
        height: 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        width: 100%;
        background-color: lightblue;
    }

    #n2 {
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1);
        border-bottom: 5px solid #dbdbdb;
        height: 400px;
        display: flex;
        justify-content: space-between;
        align-items: start;
        padding: 0 20px;
        width: 100%;
        padding-top: 30px;
        background-color: darkkhaki;
    }
</style>

<body  style="background-color:lightcyan">

    <!-- Navigation Bar (same as on other pages) -->
    <nav id="n1" class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">College Feedback System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("home", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("aboutus", "Home")">About Us</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("contactus", "Home")">Contact Us</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "home")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- About Us Section -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">About Us</h1>

        <div class="card" id="n2">
            <div class="row">
                <div class="col-md-6">
                    <h3>Our Mission</h3>
                    <p>At our college, we believe that every student has a voice, and that voice is crucial to our continuous improvement. Our mission is to provide a high-quality education, foster an inclusive learning environment, and ensure that we are always striving for excellence. The College Feedback System is designed to gather insights and suggestions from students to improve the overall academic experience.</p>
                </div>
                <div class="col-md-6">
                    <h3>Our Vision</h3>
                    <p>We envision a college that thrives on collaboration between students, faculty, and administration. By using feedback to shape our courses, services, and campus facilities, we aim to be at the forefront of educational innovation and student satisfaction. We believe that your feedback drives our success, and together we can build a better future for all students.</p>
                </div>
            </div>


            <div class="row mt-4">
                <div class="col-12">
                    <h3>Why Your Feedback Matters</h3>
                    <p>Student feedback is a critical tool for enhancing the quality of education and student life at our college. The feedback you provide helps us identify strengths and areas for improvement, ensuring that we maintain a student-centered approach in every decision we make. Whether it’s about the quality of lectures, the availability of resources, or the state of campus facilities, your feedback plays an important role in shaping the future of our college.</p>
                </div>
            </div>
        </div>

    </div>
    <!-- Footer (same as in Index page) -->
    <footer class="bg-light text-center p-4 mt-5">
        <p>&copy; 2025 College Feedback System. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
