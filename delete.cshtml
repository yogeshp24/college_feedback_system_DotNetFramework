@model collegefeedbacksystem24.Models.feedback

@{
    ViewBag.Title = "delete";
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Delete Feedback</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fafafa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .delete-container {
            max-width: 600px;
            margin: 80px auto;
            padding: 30px;
            background-color: white;
            border: 1px solid #dbdbdb;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
        }

        .delete-header {
            text-align: center;
            font-size: 26px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .warning-text {
            text-align: center;
            font-size: 18px;
            color: #d9534f;
            margin-bottom: 30px;
        }

        .detail-label {
            font-weight: 600;
            color: #555;
        }

        .detail-value {
            margin-bottom: 15px;
        }

        .btn-delete {
            background-color: #ed4956;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
        }

            .btn-delete:hover {
                background-color: #e03547;
            }

        .btn-secondary {
            margin-left: 15px;
        }

        .details-block {
            margin-bottom: 30px;
        }
    </style>
</head>
<body>

    <div class="delete-container">
        <div class="delete-header">Delete Feedback</div>
        <div class="warning-text">⚠️ Are you sure you want to delete this feedback?</div>

        <div class="details-block">
            <div>
                <span class="detail-label">Student Name:</span>
                <div class="detail-value">@Html.DisplayFor(model => model.StudentName)</div>
            </div>

            <div>
                <span class="detail-label">Feedback Type:</span>
                <div class="detail-value">@Html.DisplayFor(model => model.FeedbackType)</div>
            </div>

            <div>
                <span class="detail-label">Feedback Text:</span>
                <div class="detail-value">@Html.DisplayFor(model => model.FeedbackText)</div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-delete" />
                @Html.ActionLink("Cancel", "Feedbacks", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>

</body>
</html>