@model collegefeedbacksystem24.Models.userregistration
@{
    ViewBag.Title = "home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<style>

    #n1 {
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.8);
        border-bottom: 1px solid #dbdbdb;
        height: 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        width: 100%;
        background-color: lightblue;
    }



    #n2 {
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: -10px 0 10px rgba(0, 0, 0, 0.1);
        border-bottom: 1px solid #dbdbdb;
        height: 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        width: 100%;
        height: 300px;
    }

        #n2:hover {
            background-color: aliceblue;
        }

    #a {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-style: italic;
    }


    #c1 {
        background-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.8);
        border-bottom: 1px solid #dbdbdb;
        height: 400px;
        background-color:darkkhaki;
    }
</style>

<body style="background-color:lightcyan">

    <header style="margin:0px 0px">

        <nav id="n1" class="navbar navbar-expand-lg navbar-light ">
            <div class="container-fluid">
                <img src="~/Content/images/register.jpeg" alt="logo" style="height:50px; width:50px; margin-right:10px" />
                <a class="navbar-brand" href="#">College Feedback System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("home", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AboutUs", "Home")">About Us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ContactUs", "Home")">Contact Us</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("feedbacks", "feedback")">feedbacks</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "home")">Logout</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <!-- Hero Section (optional) -->
    <div class="container text-center mt-5">
        <h1 id="a" style="color:black">Welcome to the College Feedback System</h1>
        <p id="a" class="lead" style="color:black">Your feedback is important to us! Help us improve our services by providing valuable feedback.</p>
    </div>


    <div class="card" id="c1">

        <!-- Cards Section -->
        <div class="container mt-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

                <!-- Facility Card -->
                <div class="col">
                    <div class="card" id="n2">
                        <div class="card-body">
                            <h5 class="card-title">Facilities</h5>
                            <p class="card-text">Explore the modern facilities offered by our college, including labs, libraries, and sports areas.</p>
                            <a href="@Url.Action("facilites", "Home")" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>


                <!-- Faculty Card -->
                <div class="col">
                    <div class="card" id="n2">
                        <div class="card-body">
                            <h5 class="card-title">Faculty</h5>
                            <p class="card-text">Meet our qualified and experienced faculty members who guide you towards success.</p>
                            <a href="@Url.Action("Faculty", "Home")" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>



                <!-- Course Information Card -->
                <div class="col">
                    <div class="card" id="n2">
                        <div class="card-body">
                            <h5 class="card-title">Course Information</h5>
                            <p class="card-text">Get details about the various courses offered by our college in different disciplines.</p>
                            <a href="@Url.Action("Courses", "Home")" class="btn btn-primary">Explore Courses</a>
                        </div>
                    </div>
                </div>

                <!-- Feedback Card -->
                <div class="col">
                    <div class="card" id="n2">
                        <div class="card-body">
                            <h5 class="card-title">Feedback</h5>
                            <p class="card-text">Provide your feedback to help us improve the quality of education and services.</p>
                            <a href="@Url.Action("feedback", "feedback")" class="btn btn-primary">Give Feedback</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <!-- Footer (optional) -->
    <footer class="bg-light text-center p-4 mt-5">
        <p>&copy; 2025 College Feedback System. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>